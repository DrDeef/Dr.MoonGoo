name: Build and Push Docker Images

on:
  release:
    types: [created]  # This triggers the workflow when a release is created

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Set up QEMU for multi-platform builds
        uses: docker/setup-qemu-action@v1

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v1

      - name: Login to Docker Hub
        uses: docker/login-action@v1
        with:
          username: ${{ secrets.DOCKER_USERNAME }}  # Add this secret to your repo
          password: ${{ secrets.DOCKER_PASSWORD }}  # Add this secret to your repo

      - name: Build and push Docker images
        uses: docker/build-push-action@v3
        with:
          context: .
          push: true
          tags: |
            drdeef/drmoongoo:${{ github.event.release.tag_name }}  # Tag for amd64
            drdeef/drmoongoo:${{ github.event.release.tag_name }}-arm64  # Tag for arm64
          platforms: linux/amd64,linux/arm64
          build-args: |
            VERSION=${{ github.event.release.tag_name }}  # Optional: pass the version if needed
